	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs}": [
			"prettier --write --ignore-unknown",
			"eslint --fix"
		],
		"*.{html,jsx,tsx,vue}": [
			"prettier --write --ignore-unknown",
			"stylelint --fix --allow-empty-input",
			"eslint --fix"
		],
		"*.{css,scss,less,sass}": [
			"stylelint --fix --allow-empty-input",
			"prettier --write --ignore-unknown"
		],
		"*.{md,json}": [
			"prettier --write --ignore-unknown"
		]
	}
